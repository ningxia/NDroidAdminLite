<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="Schedule Auto Start Monitor">
        <edu.nd.nxia.cimonlite.TimePreference
            android:key="monitor_start_time"
            android:defaultValue="08:00"
            android:title="Start Time"/>
        <EditTextPreference
            android:key="monitor_duration"
            android:inputType="number"
            android:defaultValue="12"
            android:summary="12"
            android:title="Duration in hours"/>
    </PreferenceCategory>
</PreferenceScreen>
